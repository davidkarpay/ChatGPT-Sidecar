
# Sidecar Environment Configuration
# Copy this file to .env and configure your values

# === AUTHENTICATION (Choose one method) ===

# Simple Email/Password Authentication (Recommended for private use)
ADMIN_EMAIL=your-email@domain.com
ADMIN_PASSWORD=YourSecurePassword123

# API Key for programmatic access
API_KEY=change-me-to-secure-key

# Session configuration
SESSION_LIFETIME_HOURS=24

# === DATABASE ===
# Local development (SQLite)
DB_PATH=./data/sidecar.db

# Production (PostgreSQL) - Railway will provide this automatically
# DATABASE_URL=postgresql://user:password@host:port/database

# === VECTOR SEARCH ===
INDEX_PATH=./data/indexes/faiss.index
EMBED_MODEL=all-MiniLM-L6-v2

# === BACKGROUND TASKS (for ChatGPT sync) ===
# Railway will provide REDIS_URL automatically
# REDIS_URL=redis://localhost:6379

# === OPTIONAL: ZOHO OAUTH ===
# Uncomment and configure if you want to use Zoho authentication
# ZOHO_CLIENT_ID=your_zoho_client_id
# ZOHO_CLIENT_SECRET=your_zoho_client_secret
# ZOHO_DOMAIN=accounts.zoho.com
# REDIRECT_URI=https://your-app.railway.app/auth/zoho/callback

# === OPTIONAL: GOOGLE OAUTH ===
# Uncomment and configure if you want to use Google authentication
# GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GOOGLE_REDIRECT_URI=https://your-app.railway.app/auth/google/callback

# === CHATGPT SYNC ===
# Configure automatic ChatGPT data synchronization
SYNC_ENABLED=true
SYNC_INTERVAL_HOURS=24
# CHATGPT_EXPORT_URL=your_chatgpt_export_url_here
