
# API authentication key (REQUIRED: Generate a secure random key for production)
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=REPLACE_WITH_SECURE_RANDOM_KEY

# SQLite database file path
DB_PATH=sidecar.db

# FAISS vector index file path
INDEX_PATH=data/indexes/main.faiss

# FAISS ID mapping pickle file path  
IDS_PATH=data/indexes/main.pkl

# SentenceTransformer model for embeddings
EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Text chunk size in characters
CHUNK_CHARS=1200

# Overlap between chunks in characters
CHUNK_OVERLAP=120

# GPT-J Chat Configuration
# Model to use for chat (can be smaller models for faster inference)
CHAT_MODEL=EleutherAI/gpt-j-6B

# Maximum context length for chat prompts
CHAT_MAX_CONTEXT=2048

# Maximum tokens to generate in responses
CHAT_MAX_TOKENS=512

# Temperature for response generation (0.0-1.0)
CHAT_TEMPERATURE=0.7

# Use 8-bit quantization for memory efficiency (true/false)
CHAT_USE_8BIT=true
