# Database Configuration
DB_PATH=sidecar.db

# Vector Store Configuration  
INDEX_PATH=data/indexes/main.faiss
IDS_PATH=data/indexes/main.pkl
EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2

# API Authentication Keys (Role-Based Security)
# Legacy support (provides admin access)
API_KEY=change-me-legacy-key

# Role-based API keys (recommended)
READ_KEY=your-read-only-key-here      # For search, chat, document access
ADMIN_KEY=your-admin-key-here         # For ingestion, reindexing, training
SUPER_KEY=your-super-admin-key-here   # For user management, system config

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
REDIRECT_URI=http://localhost:8088/auth/callback
SESSION_LIFETIME_HOURS=24

# Chat Model Configuration  
CHAT_MODEL=EleutherAI/gpt-j-6B
CHAT_MAX_CONTEXT=2048
CHAT_MAX_TOKENS=512
CHAT_TEMPERATURE=0.7
CHAT_USE_8BIT=true
CHAT_DEVICE=auto

# LLM Provider Configuration (for plug-and-play model switching)
# LLM_PROVIDER=openai    # openai, anthropic, ollama, gptj, llamacpp
# LLM_MODEL=gpt-3.5-turbo
# LLM_BASE_URL=https://api.openai.com/v1  # For custom endpoints
# OPENAI_API_KEY=your-openai-key
# ANTHROPIC_API_KEY=your-anthropic-key

# Celery/Redis for Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Settings
# RATE_LIMIT_REQUESTS_PER_HOUR=1000    # Global rate limiting
# ENABLE_AUDIT_LOG=true                # Enable authentication audit logging
# DB_ENCRYPTION_KEY=your-32-byte-key   # For SQLCipher encryption (future)

# Development Settings
DEBUG=false
LOG_LEVEL=INFO